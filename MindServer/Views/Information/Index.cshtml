@{
    Layout = "../Shared/_AppLayout.cshtml";
}
<div class="row information">
    <div class="col-xs-12">
        <ul class="information_menu">
            <li id="the_app" class="selected">The App</li>
            <li id="about_us">About Us</li>
            <li id="terms_conditions">T & C</li>
        </ul>
    </div>
</div>
<div class="row">
    <div class="col-xs-12 information_content">
        @Html.Partial("_partials/_theApp")
        @Html.Partial("_partials/_aboutUs")
        @Html.Partial("_partials/_termsAndConditions")
    </div>
</div>

<script>
    $(document).ready(function() {
        $('.information_content .row').hide();
        $('.information_content .row:first-child').show();

        $('.information_menu li').click(function () {
            $('.information_content .row').hide();
            $('.information_menu li.selected').removeClass('selected');
            $(this).addClass('selected');

            var className = $(this).attr('id');
            $('.information_content .' + className).show();
        });
    });
</script>